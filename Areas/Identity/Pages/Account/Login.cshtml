@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-body big-margin-top">
    <div class="login-wrapper">
        <div class="container">
            <div class="loginbox login-box-modif">
                <div class="login-left">
                </div>
                <div class="login-right">
                    <div class="login-right-wrap">
                        <h1>Login</h1>
                        <p class="account-subtitle">Use a local account to log in</p>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-group form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group form-floating">
                                <a id="forgot-password" class="forgot" asp-page="./ForgotPassword">Forgot your password?</a>
                            </div>

                            <div class="form-group checkbox">
                                <label asp-for="Input.RememberMe" class="form-label" id="remember-me-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div class="form-group form-floating">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-block">Log in</button>
                            </div>
                            <div class="form-group form-floating">
                                <a asp-area="Identity" asp-page="/Account/Register">Don't have an account ? Register now !</a>
                            </div>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div class="log-ctn">

                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <div class="login-button-ctn"><button type="submit" class="btn btn-primary log-btn log-btn--google" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fa-brands fa-google login-icon"></i> <i class="text-login__modif"> @provider.DisplayName</i></button></div>

                                    }
                                    <div class="login-button-ctn"><button class="fb-log btn btn-primary log-btn log-btn--facebook "><i class="fa-brands fa-facebook-f login-icon"></i> <i class="text-login"> Facebook</i></button></div>
                                    <div class="login-button-ctn"> <button class="x-log btn btn-primary log-btn log-btn--twitter "><i class="fa-brands fa-x-twitter login-icon"></i> <i class="text-login__modif">Twitter</i></button></div>


                                </div>
                            </form>
                        </form>
                        <hr id="login-hr" />
                       
                    </div>
                </div>
            </div>
