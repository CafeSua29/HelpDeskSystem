                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover table-center mb-0 datatable">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Created On
                                                </th>
                                                <th>
                                                    Description
                                                </th>
                                                <th>
                                                    Created By
                                                </th>
                                                <th class="text-right">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in comments)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CreatedOn)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Users" asp-action="Details" asp-route-id="@item.CreatedById">
                                                            @Html.DisplayFor(modelItem => item.CreatedBy.Name)
                                                        </a>
                                                    </td>
                                                    <td class="text-right">
                                                        <div class="actions">
                                                            <a class="btn btn-sm bg-success-light mr-2 replyBtn" title="Reply" data-cmt-id="@item.Id" data-cmt-owner="@item.CreatedById">
                                                                <i class="fas fa-reply"></i>
                                                            </a>
                                                            @* <a asp-action="Reply" asp-route-id="@item.Id" class="btn btn-sm bg-success-light mr-2" title="Reply">
                                                                <i class="fas fa-reply"></i>
                                                            </a> *@

