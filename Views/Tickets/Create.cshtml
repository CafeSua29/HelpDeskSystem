@model HelpDeskSystem.ViewModels.TicketVM

@{
    ViewData["Title"] = "Create";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Create ticket</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-horizontal">
                        <div class="col-12">
                            <h5 class="form-title"><span>Ticket details</span></h5>
                        </div>
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Title" class="form-control" placeholder="" />
                                        <label asp-for="Title" class="control-label"></label>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Description" class="form-control" placeholder="" />
                                        <label asp-for="Description" class="control-label"></label>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Status" class="form-control" placeholder="" />
                                        <label asp-for="Status" class="control-label"></label>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Priority" class="form-control" placeholder="" />
                                        <label asp-for="Priority" class="control-label"></label>
                                        <span asp-validation-for="Priority" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="CategoryId" class="form-control" id="Category" placeholder="" asp-items="ViewBag.CategoryId">
                                            <option value=""> -- Category -- </option>
                                        </select>
                                        <label asp-for="CategoryId" class="control-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="SubCategoryId" class="form-control" id="SubCategory">
                                            <option value=""> -- Sub-Category -- </option>
                                        </select>
                                        <label asp-for="SubCategoryId" class="control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="w-100 btn btn-lg btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#Category').change(function () {
                var categoryId = $(this).val();
                $('#SubCategory').empty();
                $('#SubCategory').append('<option value=""> -- Sub-Category -- </option>');

                if (categoryId) {
                    $.ajax({
                        url: '@Url.Action("GetTicketSubCategories", "Datas")',
                        type: 'GET',
                        data: { categoryId: categoryId },
                        success: function (subCategories) {
                            $.each(subCategories, function (index, subCategory) {
                                $('#SubCategory').append('<option value="' + subCategory.id + '">' + subCategory.name + '</option>');
                            });
                        }
                    });
                }
            });
        });
    </script>
}
